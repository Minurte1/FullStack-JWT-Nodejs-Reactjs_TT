<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="user-infor-container">
          <form action="/users/update-user" method="post">
            <div class="mb-3 mt-3"><h3>Update User</h3></div>
            <input name="id" value="<%= result2[0].id %>" hidden />
            <div class="mb-3 mt-3 col-6">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email"
                required
                name="emailName"
                value="<%= result2[0].email %>"
              />
            </div>
            <div class="col-6"></div>

            <div class="col-6"></div>
            <div class="col-6 pb-3">
              <label for="UserName" class="form-label">UserName</label>
              <input
                type="text"
                class="form-control"
                id="UserName"
                name="UserName"
                required
                value="<%= result2[0].username %>"
              />
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>

        <div class="table-user mt-3">
          <h3 class="mt-3 mb-3">Table User</h3>
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i=0; i < result1.length; i++) { %>
              <tr>
                <th scope="row"><%= result1[i].id %></th>
                <td><%= result1[i].email %></td>
                <td><%= result1[i].username %></td>

                <td>
                  <button class="btn btn-warning">Edit</button>
                  <form
                    style="display: inline"
                    action="/delete-user/<%= result1[i].id %>"
                    method="post"
                  >
                    <button class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
